<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="text.com.example.sample01.MainActivity" >

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_centerHorizontal="true"
        android:layout_centerVertical="true"
        android:background="#999999"
        android:orientation="vertical" >

        <FrameLayout
            android:id="@+id/top_box"
            android:layout_width="match_parent"
            android:layout_height="wrap_content" >

            <TextView
                android:id="@+id/display_top"
                android:layout_width="match_parent"
                android:layout_height="80dp"
                android:layout_gravity="right"
                android:background="#000000"
                android:text="aa"
                android:textColor="#ffffff"
                android:textSize="40sp" />

            <TextView
                android:id="@+id/display_text"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_gravity="bottom"
                android:text="1+1"
                android:textSize="20sp" />
        </FrameLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#999999"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button_AC"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:text="AC"
                android:textSize="15sp" />
            <Button
	            android:id="@+id/button_SeHu"
	            android:layout_width="70dp"
	            android:layout_height="65dp"
	            android:text="+/-"
	            android:textSize="15sp" />

	        <Button
	            android:id="@+id/button_Paseto"
	            android:layout_width="70dp"
	            android:layout_height="65dp"
	            android:text="%"
	            android:textSize="15sp" />

	        <Button
	            android:id="@+id/button_Waru"
	            android:textColor="#ff8c00"
	            android:layout_width="70dp"
	            android:layout_height="65dp"
	            android:text="/"
	            android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#999999"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button_7"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:text="7"
                android:textSize="15sp" />
            <Button
	            android:id="@+id/button_8"
	            android:layout_width="70dp"
	            android:layout_height="65dp"
	            android:text="8"
	            android:textSize="15sp" />

	        <Button
	            android:id="@+id/button_9"
	            android:layout_width="70dp"
	            android:layout_height="65dp"
	            android:text="9"
	            android:textSize="15sp" />

	        <Button
	            android:id="@+id/button_Kake"
	            android:textColor="#ff8c00"
	            android:layout_width="70dp"
	            android:layout_height="65dp"
	            android:text="*"
	            android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#999999"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button_4"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:text="4"
                android:textSize="15sp" />
            <Button
	            android:id="@+id/button_5"
	            android:layout_width="70dp"
	            android:layout_height="65dp"
	            android:text="5"
	            android:textSize="15sp" />

	        <Button
	            android:id="@+id/button_6"
	            android:layout_width="70dp"
	            android:layout_height="65dp"
	            android:text="6"
	            android:textSize="15sp" />

	        <Button
	            android:id="@+id/button_Hiku"
	            android:textColor="#ff8c00"
	            android:layout_width="70dp"
	            android:layout_height="65dp"
	            android:text="-"
	            android:textSize="15sp" />
        </LinearLayout>

        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#999999"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button_1"
                android:layout_width="70dp"
                android:layout_height="65dp"
                android:text="1"
                android:textSize="15sp" />
            <Button
	            android:id="@+id/button_2"
	            android:layout_width="70dp"
	            android:layout_height="65dp"
	            android:text="2"
	            android:textSize="15sp" />

	        <Button
	            android:id="@+id/button_3"
	            android:layout_width="70dp"
	            android:layout_height="65dp"
	            android:text="3"
	            android:textSize="15sp" />

	        <Button
	            android:id="@+id/button_Tasu"
	            android:textColor="#ff8c00"
	            android:layout_width="70dp"
	            android:layout_height="65dp"
	            android:text="+"
	            android:textSize="15sp" />
        </LinearLayout>

         <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="#999999"
            android:orientation="horizontal" >

            <Button
                android:id="@+id/button_0"
                android:layout_width="140dp"
                android:layout_height="65dp"
                android:text="0"
                android:textSize="15sp" />
            <Button
	            android:id="@+id/button_Syousuu"
	            android:layout_width="70dp"
	            android:layout_height="65dp"
	            android:text="."
	            android:textSize="15sp" />

	        <Button
	            android:id="@+id/button_Ikoru"
	            android:textColor="#ff8c00"
	            android:layout_width="70dp"
	            android:layout_height="65dp"
	            android:text="="
	            android:textSize="15sp" />

	        </LinearLayout>
    </LinearLayout>

</RelativeLayout>